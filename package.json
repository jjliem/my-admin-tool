{
  "name": "react",
  "version": "1.0.0",
  "description": "React example starter project",
  "keywords": [
    "react",
    "starter"
  ],
  "main": "src/index.js",
  "dependencies": {
    "@babel/runtime": "7.13.8",
    "@types/logger": "0.0.0",
    "@types/react-dom": "^17.0.9",
    "@types/redux-logger": "^3.0.9",
    "axios": "0.21.1",
    "json-server": "^0.16.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-saga": "^1.1.3",
    "typescript": "^4.0.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^27.0.1",
    "@types/react-redux": "^7.1.18",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "jest-dom": "^4.0.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "sinon": "^11.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test ",
    "test:coverage": "react-scripts test --watchAll --coverage",
    "test:badges": "CI=true react-scripts test --coverage && jest-badges-readme",
    "eject": "react-scripts eject",
    "server": "json-server --watch db.json --port 5000"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
